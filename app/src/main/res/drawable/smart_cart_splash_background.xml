<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Modern gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#667eea"
                android:centerColor="#764ba2"
                android:endColor="#f093fb" />
        </shape>
    </item>
    
    <!-- Animated circles background pattern -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.2"
                android:centerY="0.3"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="0.8"
                android:centerY="0.7"
                android:startColor="#30FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- Central design element -->
    <item android:gravity="center">
        <vector
            android:width="200dp"
            android:height="200dp"
            android:viewportWidth="200"
            android:viewportHeight="200">
            
            <!-- Outer ring -->
            <path
                android:pathData="M 100 30 m -25 0 a 25 25 0 0 1 50 0 a 25 25 0 0 1 -50 0"
                android:strokeWidth="3"
                android:strokeColor="#FFFFFF"
                android:fillColor="#00FFFFFF" />
            
            <!-- Inner geometric shapes -->
            <path
                android:pathData="M 80 80 L 120 80 L 120 120 L 80 120 Z"
                android:fillColor="#4ADE80"
                android:strokeWidth="2"
                android:strokeColor="#FFFFFF" />
            
            <!-- Shopping cart simplified icon -->
            <path
                android:pathData="M 85 90 L 90 90 L 92 95 L 108 95 L 110 90 L 115 90"
                android:strokeWidth="4"
                android:strokeColor="#FFFFFF"
                android:strokeLineCap="round" />
            
            <path
                android:pathData="M 92 95 L 92 100 L 108 100 L 108 95"
                android:strokeWidth="4"
                android:strokeColor="#FFFFFF"
                android:strokeLineCap="round" />
            
            <!-- Cart wheels -->
            <path
                android:pathData="M 95 105 m -3 0 a 3 3 0 0 1 6 0 a 3 3 0 0 1 -6 0"
                android:fillColor="#FFFFFF" />
            <path
                android:pathData="M 105 105 m -3 0 a 3 3 0 0 1 6 0 a 3 3 0 0 1 -6 0"
                android:fillColor="#FFFFFF" />
            
            <!-- Floating dots for smart effect -->
            <path
                android:pathData="M 70 60 m -2 0 a 2 2 0 0 1 4 0 a 2 2 0 0 1 -4 0"
                android:fillColor="#06B6D4" />
            <path
                android:pathData="M 130 60 m -2 0 a 2 2 0 0 1 4 0 a 2 2 0 0 1 -4 0"
                android:fillColor="#06B6D4" />
            <path
                android:pathData="M 70 140 m -2 0 a 2 2 0 0 1 4 0 a 2 2 0 0 1 -4 0"
                android:fillColor="#8B5CF6" />
            <path
                android:pathData="M 130 140 m -2 0 a 2 2 0 0 1 4 0 a 2 2 0 0 1 -4 0"
                android:fillColor="#8B5CF6" />
            
            <!-- Connection lines -->
            <path
                android:pathData="M 70 60 L 85 80"
                android:strokeWidth="1.5"
                android:strokeColor="#06B6D4"
                android:strokeLineCap="round" />
            <path
                android:pathData="M 130 60 L 115 80"
                android:strokeWidth="1.5"
                android:strokeColor="#06B6D4"
                android:strokeLineCap="round" />
            
        </vector>
    </item>
    
    <!-- App name text background -->
    <item android:gravity="center|bottom" android:bottom="150dp">
        <vector
            android:width="300dp"
            android:height="80dp"
            android:viewportWidth="300"
            android:viewportHeight="80">
            
            <!-- Smart Cart text replacement with shapes -->
            <path
                android:pathData="M 50 20 L 80 20 L 80 25 L 50 25 Z"
                android:fillColor="#FFFFFF" />
            <path
                android:pathData="M 50 30 L 75 30 L 75 35 L 50 35 Z"
                android:fillColor="#FFFFFF" />
            <path
                android:pathData="M 50 40 L 85 40 L 85 45 L 50 45 Z"
                android:fillColor="#FFFFFF" />
            
            <path
                android:pathData="M 120 20 L 150 20 L 150 25 L 120 25 Z"
                android:fillColor="#FFFFFF" />
            <path
                android:pathData="M 120 30 L 145 30 L 145 35 L 120 35 Z"
                android:fillColor="#FFFFFF" />
            <path
                android:pathData="M 120 40 L 155 40 L 155 45 L 120 45 Z"
                android:fillColor="#FFFFFF" />
            
            <!-- Subtitle bars -->
            <path
                android:pathData="M 80 60 L 140 60 L 140 63 L 80 63 Z"
                android:fillColor="#B3FFFFFF" />
            <path
                android:pathData="M 90 67 L 130 67 L 130 70 L 90 70 Z"
                android:fillColor="#B3FFFFFF" />
            
        </vector>
    </item>
    
</layer-list> 