<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Modern gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#667eea"
                android:centerColor="#764ba2"
                android:endColor="#f093fb" />
        </shape>
    </item>
    
    <!-- Floating particles effect -->
    <item>
        <vector
            android:width="400dp"
            android:height="800dp"
            android:viewportWidth="400"
            android:viewportHeight="800">
            
            <!-- Floating circles of different sizes -->
            <path
                android:pathData="M 50 100 m -8 0 a 8 8 0 0 1 16 0 a 8 8 0 0 1 -16 0"
                android:fillColor="#40FFFFFF" />
            <path
                android:pathData="M 350 150 m -6 0 a 6 6 0 0 1 12 0 a 6 6 0 0 1 -12 0"
                android:fillColor="#60FFFFFF" />
            <path
                android:pathData="M 80 250 m -4 0 a 4 4 0 0 1 8 0 a 4 4 0 0 1 -8 0"
                android:fillColor="#50FFFFFF" />
            <path
                android:pathData="M 320 300 m -10 0 a 10 10 0 0 1 20 0 a 10 10 0 0 1 -20 0"
                android:fillColor="#30FFFFFF" />
            <path
                android:pathData="M 150 180 m -5 0 a 5 5 0 0 1 10 0 a 5 5 0 0 1 -10 0"
                android:fillColor="#70FFFFFF" />
            <path
                android:pathData="M 280 220 m -3 0 a 3 3 0 0 1 6 0 a 3 3 0 0 1 -6 0"
                android:fillColor="#80FFFFFF" />
            
            <!-- More particles -->
            <path
                android:pathData="M 120 350 m -7 0 a 7 7 0 0 1 14 0 a 7 7 0 0 1 -14 0"
                android:fillColor="#45FFFFFF" />
            <path
                android:pathData="M 30 400 m -4 0 a 4 4 0 0 1 8 0 a 4 4 0 0 1 -8 0"
                android:fillColor="#60FFFFFF" />
            <path
                android:pathData="M 370 450 m -9 0 a 9 9 0 0 1 18 0 a 9 9 0 0 1 -18 0"
                android:fillColor="#35FFFFFF" />
            <path
                android:pathData="M 200 480 m -3 0 a 3 3 0 0 1 6 0 a 3 3 0 0 1 -6 0"
                android:fillColor="#75FFFFFF" />
            
            <!-- Bottom particles -->
            <path
                android:pathData="M 90 600 m -6 0 a 6 6 0 0 1 12 0 a 6 6 0 0 1 -12 0"
                android:fillColor="#50FFFFFF" />
            <path
                android:pathData="M 310 650 m -4 0 a 4 4 0 0 1 8 0 a 4 4 0 0 1 -8 0"
                android:fillColor="#65FFFFFF" />
            <path
                android:pathData="M 160 700 m -8 0 a 8 8 0 0 1 16 0 a 8 8 0 0 1 -16 0"
                android:fillColor="#40FFFFFF" />
            
        </vector>
    </item>
    
    <!-- Central modern logo/brand mark -->
    <item android:gravity="center">
        <vector
            android:width="120dp"
            android:height="120dp"
            android:viewportWidth="120"
            android:viewportHeight="120">
            
            <!-- Modern "S" shape -->
            <path
                android:pathData="M 30 25 Q 45 15, 60 25 Q 75 35, 90 25 Q 75 45, 60 55 Q 45 65, 30 55 Q 45 75, 60 85 Q 75 95, 90 85"
                android:strokeWidth="6"
                android:strokeColor="#FFFFFF"
                android:strokeLineCap="round"
                android:fillColor="#00FFFFFF" />
            
            <!-- Modern "C" shape -->
            <path
                android:pathData="M 85 40 Q 95 30, 105 40 Q 110 50, 105 60 Q 95 70, 85 60"
                android:strokeWidth="5"
                android:strokeColor="#FFFFFF"
                android:strokeLineCap="round"
                android:fillColor="#00FFFFFF" />
            
            <!-- Accent dots -->
            <path
                android:pathData="M 25 30 m -3 0 a 3 3 0 0 1 6 0 a 3 3 0 0 1 -6 0"
                android:fillColor="#4ADE80" />
            <path
                android:pathData="M 95 85 m -3 0 a 3 3 0 0 1 6 0 a 3 3 0 0 1 -6 0"
                android:fillColor="#06B6D4" />
            
        </vector>
    </item>
    
    <!-- App name in modern typography style -->
    <item android:gravity="center|bottom" android:bottom="120dp">
        <vector
            android:width="200dp"
            android:height="50dp"
            android:viewportWidth="200"
            android:viewportHeight="50">
            
            <!-- Modern text blocks representing "SMART CART" -->
            <path
                android:pathData="M 20 15 L 45 15 L 45 20 L 20 20 Z"
                android:fillColor="#FFFFFF" />
            <path
                android:pathData="M 50 15 L 80 15 L 80 20 L 50 20 Z"
                android:fillColor="#FFFFFF" />
            
            <path
                android:pathData="M 120 15 L 145 15 L 145 20 L 120 20 Z"
                android:fillColor="#FFFFFF" />
            <path
                android:pathData="M 150 15 L 180 15 L 180 20 L 150 20 Z"
                android:fillColor="#FFFFFF" />
            
            <!-- Subtitle line -->
            <path
                android:pathData="M 60 35 L 140 35 L 140 37 L 60 37 Z"
                android:fillColor="#B3FFFFFF" />
            
        </vector>
    </item>
    
</layer-list> 